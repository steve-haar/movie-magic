{
  "name": "movie-magic",
  "description": "",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "graph": "turbo run build --graph",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "prepare": "husky install",
    "format": "prettier --write \"**/README.md\" \"**/src/**/*.{js,jsx,ts,tsx,json}\"",
    "storybook": "cd storybook && npm run storybook",
    "build-storybook": "cd storybook && build-storybook -s public"
  },
  "devDependencies": {
    "@code-shaper/plugin": "^0.0.11",
    "@code-shaper/react": "^0.0.11",
    "@code-shaper/shaper-utils": "^0.0.14",
    "@code-shaper/typescript": "^0.0.11",
    "@movie-magic/react-patterns": "*",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "turbo": "latest"
  },
  "overrides": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": "prettier --write"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.4.0"
}
